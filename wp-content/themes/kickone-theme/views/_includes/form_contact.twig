<div class="row">
	<div class="col-md-6"> 
		<div class="item-input">
			<label>Nom</label>
		    [text* your-name] 
	    </div>

	    <div class="item-input">
			<label>Prénom</label>
		    [text* your-prenom] 
	    </div>
	</div>

	<div class="col-md-6"> 

	    <div class="item-input">
			<label>Email</label>
		    [email* your-email] 
	    </div>

	    <div class="item-input">
			<label>Téléphone</label>
		    [tel* your-tel] 
	    </div>
    </div>

	<div class="col-md-12"> 

	    <div class="item-input item-input-select">
			<label >Objet</label>
			[select form-data class:w-100 default:get default:post_meta "Demande d'information" "Candidature spontanée" "Presse"]
	    </div>

	    <div class="item-input item-input-file">
			<label for="piecejointe">Pièce jointe *</label>
			<label for="piecejointe" class="label-custom"><span class="content"></span>[file* your-file id:piecejointe filetypes:pdf|png|jpg|]</label>
		    <p class="fs-xs">* Facultatif<br/>Poids max. 2Mo<br/>Formats pdf, jpg ou png</p>
	    </div>

	</div>

	<div class="col-md-12"> 
		<div class="item-input">
		    <label>Message</label>
		    [textarea* your-message] 
	   </div>
	   
		<div class="item-input">
	     	[radio radio-5 use_label_element default:1 "En cliquant sur Envoyer, vous acceptez les CGU ainsi que notre politique de confidentialité décrivant la finalité des traitements de vos données personnelles."]
	  	 </div>

	    <button type="submit" class="btn btn-orange btn-icon btn-icon-center w-100">
	    	<span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12"> <path id="Tracé_6473" data-name="Tracé 6473" d="M21,11H6.83l3.58-3.59L9,6,3,12l6,6,1.41-1.41L6.83,13H21Z" transform="translate(21 18) rotate(180)" fill="currentColor"></path></svg></span>
	    	<span class="text">Envoyer mon message</span>
	    </button>


	</div>
</div>